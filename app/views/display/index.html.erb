<p id="notice"><%= notice %></p>

<h1>Blog</h1>

<div class="container-fluid">
  <% @posts.each do |admin_post| %>
    <p><%= image_tag admin_post.avatar.url(:thumb) %></p>
    <h2><%= admin_post.title %></h2>
    <p class="text-muted", id="post-date"><%= admin_post.date %></p>
    <p><%=raw admin_post.body.truncate(200) %></p>
    <%= link_to "Read More", admin_post_path(admin_post), class:"btn btn-lg btn-info" %>
  <% end %>
</div>

